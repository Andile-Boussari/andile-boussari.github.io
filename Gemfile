source "https://rubygems.org"

# Gemset recommandé par la doc Minimal Mistakes en mode "remote_theme" :
# https://mmistakes.github.io/minimal-mistakes/docs/quick-start-guide/
gem "github-pages", group: :jekyll_plugins
gem "jekyll-include-cache", group: :jekyll_plugins

# Spécifique Windows (fuseau horaire) : recommandé par Jekyll sur Windows
gem "tzinfo-data"

# La gem wdm améliore la détection de changements de fichiers sous Windows,
# mais elle pose problème avec les versions récentes de Ruby (3.4+).
# Le site fonctionne sans, donc on la désactive pour éviter l'erreur de compilation.
# gem "wdm", "~> 0.1.0" if Gem.win_platform?
